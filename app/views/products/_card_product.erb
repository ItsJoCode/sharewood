<div class="card-image">
  <% if product.photo.attached? %>
    <%= cl_image_tag product.photo.key %>
  <% else %>
    <%= image_tag "pellet.png" %>
  <% end %>
  <div class="card-eco-score">
    <%= '<i class="fa-solid fa-leaf"></i>'.html_safe * product.eco_score %>
    <%= '<i class="fa-solid fa-leaf" style="color: #e9f5db"></i>'.html_safe * (3 - product.eco_score) %>
  </div>
</div>
<div class="card-content">
  <p class="card-title">
    <%= product.brand %>
    <a data-bs-toggle="collapse" href="#collapsDescription" role="button" aria-expanded="false" aria-controls="collapsDescription">
        <i class="fa-solid fa-circle-info"></i>
    </a>
  </p>
  <p id="collapsDescription" class="collapse card-descript"><%= product.description %></p>
</div>


