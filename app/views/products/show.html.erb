<div class="card-bg">
  <div class="card-banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= image_path "pellet.png" %>')"></div>
  <div class="card-wrapper" id="card-wrapper">
    <div class="card-pellet-style">
      <%= render "card_product", product: @product %>
    </div>
    <%= render "card_product_description", product: @product %>
  </div>
  <div class="avis-container">
    <% @reviews.each do |review| %>
      <div class="review">
        <p> Avis de <%= review.order.user.first_name %> - <% review.rating.times do %> <i class="fa-solid fa-star"></i><% end %><% (5 - review.rating).times do %><i class="far fa-star"></i><% end %> </p>
        <p><%= review.content %></p>
      </div>
    <% end %>
  </div>

  <div class="current-sales">
    <h2>Ventes en cours</h2>
    <div class="cards">
    <% @product.sales.each do |sale|  %>
      <div class="card-pellet-style">
        <%= render 'products/card_product', product: @product %>
        <br>
        <%= render 'sales/card_sale_footer', sale: sale %>
      </div>
    <% end %>
  </div>
