<div class="card-bg">
  <div class="card-banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= image_path "pellet_card_product" %>')"></div>
  <div class="card-wrapper" id="card-wrapper">
    <div class="card-pellet-style">
      <%= render 'products/card_product', product: @sale.product %>
      <br>
      <%= render 'card_sale_footer', sale: @sale %>
    </div>
    <%= render "products/card_pool", product: @sale.product %>
  </div>
   <div class="select-button">
      <label for="quantity">Select Quantity:</label>
      <br>
      <br>
      <div class="range-slider" data-controller="range-slider">
        <input type="range" id="quantity" name="quantity" min="1" max="10" value="1" data-range-slider-target="input"
         data-action="range-slider#onInput">
        <output for="quantity" data-range-slider-target="output"></output >
      </div>
    </div>
</div>
