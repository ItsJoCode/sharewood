<h1>Sales</h1>

<div class="main-sale-card" data-controller="search-sales">
  <div class="search-container mb-3">
    <%= form_with url: sales_path, method: :get, html: {class: "d-flex", data:{search_sales_target: "form"}} do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search...",
      data: {
              search_sales_target: "input",
              action: "keyup->search-sales#update"
            }
    %>
    <%= button_tag do %>
      <i class="fa fa-search"></i>
    <% end %>
  <% end %>
  </div>

  <%= render 'sales/list', sales: @sales %>
</div>
