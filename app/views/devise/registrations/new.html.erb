<div class="row p-5">
    <div class="log col-12 col-sm-4 mx-auto p-4">
      <h2 class="text-center">Créer votre compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
          <div class="row pt-5">
            <div class="col-6 mb-3">
              <%= f.input :first_name,
                          label: false,
                          placeholder: "Prénom" %>
            </div>
            <div class="col-6 mb-3">
              <%= f.input :last_name,
                          label: false,
                          placeholder: "Nom" %>
            </div>
          </div>
          <div class="col-12 mb-3">
            <%= f.input :email,
                        label: false,
                        placeholder: "Email",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        class: "form-group" %>
          </div>
          <div class="col-12 mb-3">
            <%= f.input :password,
                        label: false,
                        placeholder: "Mot de passe",
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        class: "form-group" %>
          </div>
          <div class="col-12 mb-3">
            <%= f.input :password_confirmation,
                        label: false,
                        placeholder: "Confirmation",
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        class: "form-group" %>
          </div>
          <div class="col-12 mb-3">
            <%= f.submit "S'inscrire", class: "btn btn-primary btn-lg w-100" %>
          </div>
      <% end %>
    </div>
</div>
