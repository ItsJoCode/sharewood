<div class="card-bg" data-controller="range-slider"
                    data-range-slider-price-value = "<%= @sale.price_reduction %>"
                    data-range-slider-weight-value = "<%= @sale.product.weight %>" >
  <% if @sale.product.photo.attached? %>
    <div class="card-banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path @sale.product.photo.key %>')"></div>
  <% else %>
    <div class="card-banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= image_path "pellet.png" %>')"></div>
  <% end %>
  <div class="card-wrapper" id="card-wrapper">
    <div>
      <div class="card-pellet-style card-animation hidden" data-animation-target="card">
        <%= render 'products/card_product', product: @sale.product, sale: @sale %>
        <%= render 'sales/card_sale_footer', sale: @sale %>

      </div>
      <div>
        <%= render 'slider', product: @sale.product %>
      </div>
    </div>

    <div class="product-wrapper table-animation hidden" data-animation-target="table">
      <%= render "products/card_product_description", product: @sale.product %>
    </div>
  </div>


</div>
