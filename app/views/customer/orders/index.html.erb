<div class="customer-banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "autumnwood.png" %>')">
  <div class="container">
    <h1><strong>Mes commandes</strong></h1>
  </div>
</div>
<div class="container">
  <div class="orders-state">
    <h2>En cours</h2>
      <div class="cards">
        <% @orders.select { |order| order.sale.progress == "in_progress" }.each do |order| %>
          <%= link_to customer_order_path(order), class:"text-reset text-decoration-none" do %>
            <div class="card-pellet-style">
              <%= render 'products/card_product', product: order.sale.product %>
              <br>
              <%= render 'sales/card_sale_footer', sale: order.sale %>
            </div>
          <% end %>
        <% end %>
      </div>
    <h2>Validées</h2>
     <div class="cards">
        <% @orders.select { |order| order.sale.progress == "confirmed" }.each do |order| %>
        <%= link_to customer_order_path(order), class:"text-reset text-decoration-none" do %>
          <div class="card-pellet-style">
            <%= render 'products/card_product', product: order.sale.product %>
            <br>
            <%= render 'sales/card_sale_footer', sale: order.sale %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <h2>Livrées</h2>
      <div class="cards">
        <% @orders.select { |order| order.sale.progress == "done" }.each do |order| %>
        <%= link_to customer_order_path(order), class:"text-reset text-decoration-none" do %>
          <div class="card-pellet-style">
            <%= render 'products/card_product', product: order.sale.product %>
            <br>
            <%= render 'sales/card_sale_footer', sale: order.sale %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <h2>Annulées</h2>
    <div class="cards">
        <% @orders.select { |order| order.sale.progress == "cancel" }.each do |order| %>
        <%= link_to customer_order_path(order), class:"text-reset text-decoration-none" do %>
          <div class="card-pellet-style">
            <%= render 'products/card_product', product: order.sale.product %>
            <br>
            <%= render 'sales/card_sale_footer', sale: order.sale %>
          </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
